<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:minWidth="48dp">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|number|numberDecimal"
            android:ems="10"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:id="@+id/result"
            android:minWidth="48dp"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="@+id/guideline"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:id="@+id/operation"
            app:layout_constraintEnd_toStartOf="@+id/button7" android:layout_marginEnd="8dp"
            android:textSize="18sp" app:layout_constraintBaseline_toBaselineOf="@+id/button7"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/newNumber"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button0"
            android:minWidth="48dp" tools:layout_editor_absoluteX="112dp" tools:layout_editor_absoluteY="229dp"/>
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            android:minWidth="48dp" tools:layout_editor_absoluteX="112dp" tools:layout_editor_absoluteY="173dp"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:minWidth="48dp" tools:layout_editor_absoluteX="168dp" tools:layout_editor_absoluteY="173dp"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:minWidth="48dp"
            app:layout_constraintStart_toStartOf="@+id/button6" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button6"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:minWidth="48dp" tools:layout_editor_absoluteX="112dp" tools:layout_editor_absoluteY="117dp"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:minWidth="48dp" tools:layout_editor_absoluteY="117dp" tools:layout_editor_absoluteX="168dp"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:minWidth="48dp"
            app:layout_constraintStart_toStartOf="@+id/button9" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button9"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:minWidth="48dp" tools:layout_editor_absoluteX="112dp" tools:layout_editor_absoluteY="61dp"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            android:minWidth="48dp" tools:layout_editor_absoluteY="61dp" tools:layout_editor_absoluteX="168dp"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            android:minWidth="48dp" tools:layout_editor_absoluteY="71dp" tools:layout_editor_absoluteX="461dp"/>
    <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDivide"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button9" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/button9"/>
    <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMultiply"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button6"
            app:layout_constraintStart_toEndOf="@+id/button6" android:layout_marginStart="8dp"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMinus"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button3" app:layout_constraintStart_toEndOf="@+id/button3"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPlus"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonEquals"
            app:layout_constraintStart_toEndOf="@+id/buttonEquals" android:layout_marginStart="8dp"/>
    <Button
            android:text="."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDot"
            android:minWidth="48dp" tools:layout_editor_absoluteX="168dp" tools:layout_editor_absoluteY="229dp"/>
    <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEquals"
            android:minWidth="48dp"
            app:layout_constraintStart_toStartOf="@+id/button3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button3"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>